{
	"compilerOptions": {
		"lib": ["es2017"],
		"module": "commonjs",
		"noImplicitReturns": true,
		"outDir": "dist",
		"sourceMap": true,
		"target": "es6",
		"typeRoots": ["./backend/typings", "./node_modules/@types"],
		// "strict": true,
		"allowJs": true,
		"removeComments": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"compileOnSave": true,
	"include": ["backend"]
}
